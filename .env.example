# docs base url
DOCS_BASE_URL=http://127.0.0.1:5001/api

# --- Database ---
# Database driver: pg | mysql | mssql | sqlite3
DB_DRIVER=pg

# Database connection URL
# Examples:
#   PostgreSQL: postgres://user:password@localhost:5432/dbname
#   MySQL: mysql://user:password@localhost:3306/dbname
DB_URL=postgres://postgres:postgres@localhost:5432/agent

# Database name (optional, will be derived from DB_URL if not set)
DB_NAME=agent

DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# --- OpenTelemetry / Tracing ---
# Enable/disable OpenTelemetry tracing (true/false/1/0/yes/no)
TRACER_ENABLED=true

# OTLP endpoint for traces (HTTP). Use /v1/traces suffix when using OTLP/HTTP (default collector port 4318)
# Examples:
#   http://localhost:4318/v1/traces
#   https://otel-collector.yourdomain.com/v1/traces
TRACER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Optional: OTLP HTTP headers as comma-separated key=value pairs
# Example: x-honeycomb-team=YOUR_API_KEY,x-otlp-project=your-project
TRACER_OTLP_HEADERS=

# Service identity
TRACER_SERVICE_NAME=ai-agents

# Sampling ratio (0..1). 1 = sample all, 0.1 = 10% sampling
TRACER_SAMPLE_RATIO=1

# Privacy controls for AI telemetry payloads
TRACER_RECORD_INPUTS=false
TRACER_RECORD_OUTPUTS=false

# Aliases also supported by the code (if you prefer using standard OTEL env vars):
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT
# OTEL_EXPORTER_OTLP_ENDPOINT
# OTLP_ENDPOINT
# OTEL_EXPORTER_OTLP_HEADERS
# OTEL_SERVICE_NAME


# --- Logging (Pino) ---
# Log level: trace | debug | info | warn | error | fatal | silent
LOG_LEVEL=info

# Pretty print logs to terminal (requires pino-pretty). Set true for local dev.
LOG_PRETTY=true

# Attach file:line caller info to each log entry (small overhead)
LOG_CALLER=true


# --- Chat Context ---
# Max number of recent messages to include (user/assistant/tool).
CHAT_HISTORY_LIMIT=500


# --- Web Search (Tavily) ---
# Provide your Tavily API key. Either variable is supported by the code.
# Preferred:
TAVILY_API_KEY=
# Alternative alias (optional):
# TAVILY_KEY=
