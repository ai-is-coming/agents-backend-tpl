generator client {
  provider = "prisma-client-js"
  output   = "clients"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model chat_messages {
  id         BigInt    @id @default(autoincrement())
  session_id BigInt    @default(autoincrement())
  role       String    @db.VarChar(16)
  trace_id   String    @db.Char(32)
  content    Json
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@index([session_id, id], map: "idx_chat_messages_session")
}

model chat_sessions {
  id         BigInt    @id @default(autoincrement())
  user_id    BigInt    @default(autoincrement())
  title      String    @default("New Chat") @db.VarChar(255)
  status     Int       @default(1) @db.SmallInt
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@index([user_id, updated_at(sort: Desc)], map: "idx_chat_sessions_user")
}

model schema_migrations {
  version BigInt    @id
  name    String?
  md5     String?
  run_at  DateTime? @db.Timestamptz(6)
}

model users {
  id         BigInt    @id @default(autoincrement())
  email      String    @unique @db.VarChar(255)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@index([email], map: "idx_users_email")
}
